<%- include("../partials/header") %>
    <title>Add an Animal</title>
    </head>

    <body>
        <%- include("../partials/nav") %>
            <div class="container my-5">
                <h1>Add an Animal</h1>
                <form action="/animals" class="text-a w-50 mt-3" method="post">
                    <div class="form-group">
                        <label for="name" class="mb-3">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Daisy" required>
                    </div>
                    <div class="form-group">
                        <label for="animal" class="mb-3">Animal</label>
                        <input type="text" class="form-control" id="animal" name="animal" placeholder="Dog" required>
                    </div>
                    <div class="form-group">
                        <label for="breed" class="mb-3">Breed</label>
                        <input type="text" class="form-control" id="breed" name="breed" placeholder="Chihuahua"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="age" class="mb-3">Age</label>
                        <input type="number" class="form-control" id="age" name="age" placeholder="3" required>
                    </div>
                    <div class="form-group">
                        <label for="img" class="mb-3">Image</label>
                        <input type="text" class="form-control" id="img" name="img" placeholder="Link to image"
                            required>
                    </div>
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" value="true" id="trained" name="trained">
                        <label class="form-check-label" for="trained">
                            This animal is trained.
                        </label>
                    </div>
                    <button type="submit" class="btn btn-outline-dark px-4">Add Animal</button>
                </form>
            </div>

        <%- include("../partials/footer") %>
    </body>

    <style>
        @media only screen and (max-width: 600px) {
            .my-5 {
                margin-top: 0 !important;
                margin-bottom: 0 !important;
                padding-top: 5rem;
            }

            .w-50 {
                width: 100% !important;
            }
        }
    </style>


    </html>