<%- include("./partials/header") %>
    <title>Register Page</title>
    </head>

    <body>

        <%- include("./partials/nav") %>
            <div class="container my-5">
                <h1 class="mb-5">Register</h1>
                <form action="/register" class="text-a w-50" method="post">
                    <div class="form-group">
                        <label for="name" class="mb-3">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Speedy Gonzales"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="mb-3">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="speed@looney.com"
                            required>
                    </div>
                    <div class="form-group mb-4">
                        <label for="password" class="mb-3">Password</label>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="toofastandfurious" required>
                    </div>
                    <button type="submit" class="btn btn-outline-dark px-4">Sign In</button>
                </form>
            </div>
            <%- include("./partials/footer") %>
    </body>

    <style>
        @media only screen and (max-width: 600px) {
            .my-5 {
                margin-top: 0 !important;
                margin-bottom: 0 !important;
                padding-top: 5rem;
            }

            .w-50 {
                width: 100% !important;
            }
        }
    </style>

    </html>